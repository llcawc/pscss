{
  "name": "@pasmurno/pscss",
  "version": "0.0.2",
  "description": "Gulp plugin for simple processing of sass styles and modern css style",
  "keywords": [
    "gulp",
    "optimize",
    "bundle",
    "minify",
    "purge",
    "styles",
    "css",
    "sass",
    "scss",
    "pcss",
    "bootstrap"
  ],
  "license": "MIT",
  "author": "llcawc",
  "homepage": "https://github.com/llcawc/pscss",
  "type": "module",
  "main": "./libs/pscss.js",
  "exports": "./libs/pscss.js",
  "types": "./libs/pscss.d.ts",
  "files": [
    "libs",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint ./src && stylelint src/**/*.css",
    "fix": "eslint ./src --fix && stylelint src/**/*.css --fix",
    "tsc": "tsc -p ./ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@pasmurno/serve": "^0.0.4",
    "@types/bootstrap": "^5.2.10",
